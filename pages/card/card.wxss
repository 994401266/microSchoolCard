/* pages/card/card.wxss */
page{
  padding-bottom: 102rpx;
}
.imageWrap image{
  width: 100%;
}
.imageWrap {
  margin-top: 30rpx; 
  padding: 0 20rpx;
}
.tag{
  margin-left: 20rpx;
  font-size: 36rpx;
  padding-bottom: 10rpx;
  margin-top: 20rpx;
}
.introduce{
  font-size: 32rpx;
  color: #666;
  padding: 10rpx 20rpx;
}
.footer{
  position: fixed;
  width: 100%;
  height: 90rpx;
  background: #fff;
  bottom: 0;
  left: 0;
  border-top: 1px solid #f1f3f5;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 26rpx;
  box-sizing: border-box;
  color: #999;
}
.footer button{
  color: #fff;
  font-size: 30rpx;
  background: #06d995;
  width: 75%;
  border-radius: 0;
}
.threeBtn button{
  width: 37.5%;
}
.footer button image{
  display: block;
  margin: 0 auto;
  width: 32rpx;
  height: 32rpx;
}
.footer button:first-of-type{
  width: 25%;
  color: #359eff;
  font-size: 20rpx;
  line-height: 2;
  background: #fff;
  padding-top: 15rpx;
}
.threeBtn button:nth-of-type(2),
.footer button:last-of-type{
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.threeBtn button:nth-of-type(2){
  background: #359eff;
}
.footer button:after{
  border: none;
}
.getMoreInfo{
  text-align: center;
  color: #06d995;
  font-size: 26rpx;
  width: 100%;
  clear: both;
  padding: 25rpx 0 15rpx;
}
.phoneWrap{
  font-size: 30rpx;
  color: #666;
}
.mobile{
  display: inline;
  color: #359eff !important;
  font-weight: 400;
  color: #666;
  line-height: 40rpx;
  height: 40rpx;
}
.cardList .subInfo view{
  border-top: 1px solid #ddd;
  display: flex;
  align-items: center;
  height: 88rpx;
  font-size: 28rpx;
  color: #999;
  box-sizing: border-box;
  padding: 0 15rpx;
  margin-right: 25rpx;
}
.cardList .subInfo view:last-of-type{
  border-bottom: 1px solid #ddd;
}
.cardList .subInfo view .tag{
  width: 20%;
  float: left;
  font-size: 28rpx;
  margin-left: 0;
  padding-bottom: 0;
}
.cardList .subInfo view  .desText{
  width: 60%;
  float: left;
}
.cardList .subInfo view image{
  width: 45rpx;
  height: 45rpx;
  float: right;
  margin-right: 10rpx;
  margin-left: auto;
}
.listInfo .userName{
  margin-bottom: 10rpx;
}
.saveBtn{
  width: 80%;
  background: #06d995;
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.deleteBtn{
  width: 80%;
  background: #fff;
  color: #333;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.btnWrap{
  width: 80%;
  margin: 0 auto 25rpx;
}
.btnWrap button{
  width: 60%;
  margin: 0;
  float: right;
  box-sizing: border-box;
  border: 1px solid #06d995;
}
.btnWrap button:first-of-type{
  width: 33.3%;
  float: left;
  border: 1px solid #999;
}
.btnWrap button:after{
  border: 0;
}
