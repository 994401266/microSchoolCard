.codeWrap{
 text-align: center;
 margin-top: 100rpx;
}
.question{
  width: 44rpx;
  height: 44rpx;
  background: #1296db;
  color: #fff;
  border-radius: 50%;
  padding: 0;
  margin: 0;
  line-height: 44rpx;
  text-align: center;
  font-size: 30rpx;
  margin-right: 50rpx;
  margin-top: 30rpx;
  margin-left: auto;
}
.name{
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.company{
  font-size: 32rpx;
  font-weight: 400;
}
.codeWrap image{
  width: 400rpx;
  height: 400rpx;
}
.tip{
  width: 80%;
  margin: 20rpx auto;
  font-size: 26rpx;
  color: #666;
  border-top: 2px solid #ccc; 
  padding-top: 20rpx;
}
.tip text{
  display: block;
  text-align: center;
}
.buttonWrap{
  display: flex;
  justify-content: space-between;
  padding-top: 40rpx;
}
.buttonWrap button{
  width: 40%;
  font-size: 30rpx;
  display: inline-block;
  background: #06d995;
  color: #fff;
}
