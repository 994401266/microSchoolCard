/* pages/poster/poster.wxss */
page {
  display: block;
  min-height: 100%;
  background: #f1f3f5;
}

.canvasWrap canvas{
  margin-top: 20rpx;
  pointer-events: none;
  position: absolute;
  top: 0;
  left: 1000px;
}
.cover{
  width: 100%;
  height: 495px;
  position: absolute;
  top: 0;
  left: 0;
}
.buttomWrap{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #fff;
}
.buttomWrap button{
  width: 50%;
  border-radius: 0;
}
.buttomWrap button:after{
  border: none;
}
.buttomWrap button:last-of-type{
  background: #06d995;
  color: #fff;
}
.buttomWrap .savePoster{
  width: 100%;
  font-size: 32rpx;
}
.buttomWrap .savePosters{
  width: 75%;
  font-size: 32rpx;
  float: right;
}
.buttomWrap .chooseBG{
  width: 25%;
  font-size: 20rpx;
  float: left;
  background: #fff;
  padding-top: 10rpx;
  line-height: 1.5;
  color: #359eff;
}
.chooseBG image{
  width: 32rpx;
  height: 32rpx;
  display: block;
  margin: 0 auto;
}
.dotWrap{
  text-align: center;
  position: absolute;
  bottom: -20rpx;
  left: 0;
  width: 100%;
}
.dotWrap .dot{
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: rgba(0,0,0,.4);
  margin-right: 20rpx;
}
.dotWrap .dot:last-of-type{
  margin-right: 0;
}
.dotWrap .dot.active{
  background: #000;
}