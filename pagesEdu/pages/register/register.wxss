/* pagesEdu/pages/school/school.wxss */
page{
  color: #fff;
  padding-top: 60rpx;
}
.bg{
  top: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  filter: blur(1px)
}
.title{
  text-align: center;
  font-size: 44rpx;
  font-weight: bold;
  line-height: 4;
}
.form{
  width: 600rpx;
  height: 800rpx;
  border: 1px solid #fff;
  margin: 0 auto;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  box-shadow: 0 0 20px rgba(255,255,255,.8);
}
.inputWrap{
  margin-bottom: 40rpx;
  background: rgba(255,255,255,.2);
  padding: 15rpx;
  border-radius: 40rpx;
  position: relative;
  overflow: hidden;
  border: 1px solid transparent;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.inputWrap.active{
  background: rgba(255,255,255,.4);
  box-shadow: 0 0 10px rgba(255,255,255,.4);
  border: 1px solid #fff;
}
.inputWrap .inputTag{
  width: 150rpx;
  font-size: 32rpx;
  text-align: right;
  line-height: 50rpx;
}
.inputWrap input{
  width: 380rpx;
  margin-left: 20rpx;
}
.codeWrap input{
  width: 230rpx;
}
.codeWrap .codeBtn{
  position: absolute;
  top: 0;
  right: 0;
  width: 160rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 0 40rpx 40rpx 0;
  color: #06d995;
  font-weight: 600;
}
.subBtn{
  margin-top: 60rpx;
  line-height: 2;
  margin: 0 120rpx;
  transform: translateY(20rpx);
  background: #06d995;
  color: #fff;
}
.placeholder{
  color: rgba(255, 255, 255, .6);
  font-size: 32rpx;
}
.foot{
  position: fixed;
  height: 80rpx;
  left: 0;
  bottom: 20rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
}