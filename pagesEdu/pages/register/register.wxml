<!--pagesEdu/pages/school/school.wxml-->
<view class='wrap' id='register'>
  <image src='../../image/bg.jpg' class='bg'></image>
  <view style='display: none;'>原地徘徊一千步，抵不上向前迈出第一步</view>
  <view class='form'>
    <view class='title'>
      机构入驻申请
    </view>
    <view class='inputWrap clearfix {{focusKey == "name"? "active": ""}}' >
      <view class='inputTag'> 联系人 : </view>
      <input placeholder='请输入真实姓名' placeholder-class='placeholder' data-name='name' bindfocus="focus" bindblur='blur'></input>
    </view>
    <view class='inputWrap clearfix {{focusKey == "mobile"? "active": ""}}'>
      <view class='inputTag'> 手机 : </view>
      <input placeholder='请输入常用手机号' placeholder-class='placeholder' data-name='mobile' bindfocus="focus" bindblur='blur'></input>
    </view>
    <view class='inputWrap clearfix codeWrap {{focusKey == "validateCode"? "active": ""}}'>
      <view class='inputTag'> 验证码 : </view>
      <view class='codeBtn'>短信验证</view>
      <input placeholder='请输入验证码' placeholder-class='placeholder' data-name='validateCode' bindfocus="focus" bindblur='blur'></input>
    </view>
    <view class='inputWrap clearfix {{focusKey == "orgnationName"? "active": ""}}'>
      <view class='inputTag'> 机构名称 : </view>
      <input placeholder='请输入机构名称' placeholder-class='placeholder' data-name='orgnationName' bindfocus="focus" bindblur='blur'></input>
    </view>

    <button class='subBtn'>申请</button>
  </view>
  <view class='foot'>
    微校名片，您的去中心化推广平台
  </view>
</view>