
.subInfo .subInfoItem{
  padding: 20rpx 20rpx 20rpx 25rpx;
  border-bottom: 1px solid #f1f3f5;
  font-size: 30rpx;
  position: relative;
}
.subInfo .subInfoItem .tag{
  width: 160rpx;
  float: left;
  color: #666;
  margin-top: -2.5rpx;
}
.subInfo .subInfoItem .tag.need :after{
  content: ' *';
  color: #ff3030;
}
.subInfo .subInfoItem input,
.subInfo .subInfoItem textarea{
  width: 520rpx;
  float: right;
  margin-top: -5rpx;
}
.subInfo .subInfoItem textarea{
  padding: 5rpx 0;
  box-sizing: border-box;
}

.subInfoItem image{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 40rpx;
  top: calc(50% - 22rpx);
  z-index: 1;
}
.saveBtn{
  width: 80%;
  background: #06d995;
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.deleteBtn{
  width: 80%;
  background: #fff;
  color: #333;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.btnWrap{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  border-top: 1px solid #efefef;
}
.btnWrap button{
  width: 70%;
  margin: 0;
  float: right;
  box-sizing: border-box;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 0;
}
.btnWrap button:first-of-type{
  width: 30%;
  float: left;
  color: #359eff;
}
.btnWrap button:after{
  border: 0;
}
.slogoWrap{
  display: block;
  width: 100%;
  margin: 20rpx auto 10rpx; 
  position: relative;
  border-bottom: 1px solid #efefef;
  text-align: center;
}
.slogoWrap .slogo{
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
}
.slogoWrap .changeBtn{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  bottom: 65rpx;
  left: calc(50% - 25rpx);
  box-shadow: 0 0 5px rgba(0, 0, 0, .15);
}
.slogoTips{
  color: #666;
  text-align: center;
  font-size: 26rpx;
  display: block;
  line-height: 2;
  font-weight: 600;
}
