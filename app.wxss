.placeholder{
  color: #acacac;
  font-size: 30rpx;
}
text.arrowDown{
  display: inline-block;
  border: 12rpx solid transparent;
  border-top-width: 0;
  border-bottom-color: #06d995;
}
text.arrowUp{
  display: inline-block;
  border: 12rpx solid transparent;
  border-bottom-width: 0;
  border-top-color: #06d995;
}
.logoWrap{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0 20rpx;
  color: #999;
  font-size: 30rpx;
}
.logoWrap image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 6rpx;
  vertical-align: middle;
}

/* 授权弹窗的样式 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-dialog .modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-dialog .modal-content {
  padding: 50rpx 32rpx;
}

.modal-dialog .modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.modal-dialog .btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.modal-dialog .btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
.modal-dialog .btn-confirm button:after{
  border: none;
}
/* 授权弹窗的样式end */
.errorWrap{
 text-align: center;
}
.errorWrap{
  padding-top: 30%;
}
.nocontentImg{
  display: block;
  width: 280rpx;
  height: 280rpx;
  margin: 30rpx auto;
}
.errorWrap view{
  color: #999;
  font-size: 32rpx;
  line-height: 2;
}
.errorWrap navigator{
  display: inline;
  color: #359eff
}